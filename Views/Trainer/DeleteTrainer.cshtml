@model Maio11_Best.Models.trainer

@{
    ViewBag.Title = "DeleteTrainer";
}

<h2>DeleteTrainer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>trainer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trainer_name)
        </dd>

        <dt>
            Coaching License
        </dt>

        <dd>
            @Html.DisplayFor(model => model.coaching_license)
        </dd>

        <dt>
            Photo
        </dt>

        <dd>
            @if (Model.photo_path == null || String.IsNullOrEmpty(Model.photo_path))
            {
                <img width="120" src="@Url.Content("~/fotos/coachs/no-coach.png")" alt="" />
            }
            else
            {
                <img width="120" src="@Url.Content("~/fotos/coachs/" + System.IO.Path.GetFileName(Model.photo_path))" alt="" />
            }
        </dd>

        <dt>
            Team
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Team.team_name)
        </dd>

    </dl>

    @using (Html.BeginForm("DelTrainer", "Trainer"))
    {
        @Html.AntiForgeryToken()


        @Html.HiddenFor(model => model.trainer_id)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "TrainerList")
        </div>
    }
</div>
