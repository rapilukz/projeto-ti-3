@model IEnumerable<Maio11_Best.Models.player>

@{
    ViewBag.Title = "PlayerList";
}

<h2>Players</h2>

<p>
    @Html.ActionLink("Create New", "InsertPlayer", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-responsive table-bordered table-striped">
    <tr class="text-center">
        <th>Id</th>
        <th>Name</th>
        <th>Position</th>
        <th>Birthdate</th>
        <th>Team</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="text-center">
        <td>
            @Html.DisplayFor(modelItem => item.player_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.player_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.birthdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team.team_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.player_id }, new { @class="btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = item.player_id }, new { @class="btn btn-danger" })
        </td>
    </tr>
}

</table>
