@model Maio11_Best.Models.player

@{
    ViewBag.Title = "DeletePlayer";
}

<h3>Are you sure you want to delete this player?</h3>
<div>
    <h4>Player Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.player_name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.player_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.position)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.position)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.birthdate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.birthdate)
        </dd>

        <dt>
            Photo
        </dt>
        <dd>
            @if (Model.photo_path == null || String.IsNullOrEmpty(Model.photo_path))
            {
                <img width="120" src="@Url.Content("~/fotos/players/no-player.png")" alt="" />
            }
            else
            {
                <img width="120" src="@Url.Content("~/fotos/players/" + System.IO.Path.GetFileName(Model.photo_path))" alt="" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Team.team_name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Team.team_name)
        </dd>
    </dl>

    @using (Html.BeginForm("DelPlayer", "Player", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <!-- Hidden field for player_id -->
        @Html.HiddenFor(model => model.player_id)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "PlayerList")
        </div>
    }
</div>
