@using System;
@using System.IO;
@using PagedList.Mvc
@model PagedList.IPagedList<Maio11_Best.Models.Team>

@{
    ViewBag.Title = "Teams";
}

<h2>Teams</h2>

@if (User.Identity.IsAuthenticated)
{
    <div class="mb-2">
        @Html.ActionLink("Create New", "InsertTeam", null, new { @class = "icon-button btn btn-primary fa fa-plus" })
        @Html.ActionLink("Export to Excel", "ExportToExcel", null, new { @class = "icon-button btn btn-success fa fa-file-excel-o" })
    </div>
}


<table class="table table-responsive table-bordered table-striped">
    <tr class="text-center">
        <th>Id</th>
        <th>Name</th>
        <th>Logo</th>
        <th>Founded in</th>
        <th>Country</th>
        @if (User.Identity.IsAuthenticated)
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.team_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.team_name)
            </td>
            <td>
                @if (item.photo_path == null || String.IsNullOrEmpty(item.photo_path))
                {
                    <img width="50" src="@Url.Content("~/fotos/teams/no-logo.png")" alt="" />
                }
                else
                {
                    <img width="50" src="@Url.Content("~/fotos/teams/" + System.IO.Path.GetFileName(item.photo_path))" alt="" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.foundation_year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country)
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <td class="actions-row">
                    @Html.ActionLink("Edit", "EditTeam", new { id = item.team_id }, new { @class = "icon-button btn btn-primary fa fa-pencil" })
                    @Html.ActionLink("Delete", "DeleteTeam", new { id = item.team_id }, new { @class = "icon-button btn btn-danger fa fa-trash" })
                </td>
            }
        </tr>
    }

</table>

<div class="d-flex justify-content-sm-between">
    @Html.PagedListPager(Model, page => Url.Action("TeamList", "Team", new { page }))
    <span>Page @(Model.PageNumber > Model.PageCount ? 1 : Model.PageNumber) of @Model.PageCount</span>
</div>