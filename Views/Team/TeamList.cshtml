@using System;
@using System.IO;
@using PagedList.Mvc
@model PagedList.IPagedList<Maio11_Best.Models.Team>

@{
    ViewBag.Title = "Teams";
}

<h2>Teams</h2>

<p>
    @Html.ActionLink("Create New", "InsertTeam", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-responsive table-bordered table-striped">
    <tr class="text-center">
        <th>Id</th>
        <th>Name</th>
        <th>Logo</th>
        <th>Founded in</th>
        <th>Country</th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.team_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.team_name)
            </td>
            <td>
                @if (item.photo_path == null || String.IsNullOrEmpty(item.photo_path))
                {
                    <img width="50" src="@Url.Content("~/fotos/teams/no-logo.jpg")" alt="" />
                }
                else
                {
                    <img width="50" src="@Url.Content("~/fotos/teams/" + System.IO.Path.GetFileName(item.photo_path))" alt="" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.foundation_year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td class="actions-row">
                @Html.ActionLink("Edit", "EditTeam", new { id = item.team_id }, new { @class = "icon-button btn btn-primary fa fa-pencil" })
                @Html.ActionLink("Delete", "DeleteTeam", new { id = item.team_id } , new { @class = "icon-button btn btn-danger fa fa-trash" })
            </td>
        </tr>
    }

</table>

<div>Page @(Model.PageNumber > Model.PageCount ? 1 : Model.PageNumber) of @Model.PageCount </div>
@Html.PagedListPager(Model, page => Url.Action("TeamList", "Team", new { page }))