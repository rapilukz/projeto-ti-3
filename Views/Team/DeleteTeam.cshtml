@model Maio11_Best.Models.Team

@{
    ViewBag.Title = "DeleteTeam";
}

<h2>DeleteTeam</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Team</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Team Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.team_name)
        </dd>

        <dt>
            Founded in
        </dt>

        <dd>
            @Html.DisplayFor(model => model.foundation_year)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.country)
        </dt>

        <dd>
           Country
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.photo_path)
        </dt>

        <dd>
            @if (Model.photo_path == null || String.IsNullOrEmpty(Model.photo_path))
            {
                <img width="120" src="@Url.Content("~/fotos/teams/no-logo.png")" alt="" />
            }
            else
            {
                <img width="120" src="@Url.Content("~/fotos/teams/" + System.IO.Path.GetFileName(Model.photo_path))" alt="" />
            }
        </dd>

    </dl>

    @using (Html.BeginForm("DelTeam", "Team"))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.team_id)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "TeamList")
        </div>
    }
</div>
